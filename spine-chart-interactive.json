{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/icepeachedtea/FIT3179/main/data/(NEW)2022_World_Happiness_Report.csv"
    },
    "transform": [
      {
        "aggregate": [{
         "op": "mean",
         "field": "Generosity",
         "as": "mean_generosity"
        }],
        "groupby": ["Continent"]
      }
    ],
    "encoding": {
      "y": {
        "field": "Continent",
        "type": "nominal",
        "title": "Region",
        "axis": {
          "domain": false,
          "ticks": false,
          "labelAngle": 0,
          "labelPadding": 4
        }
      },
      "x": {
        "field": "mean_generosity",
        "type": "quantitative",
        "title": "Level of Generosity",
        "scale": {
          "padding": 20,
          "domainMin": -0.10,
          "domainMax": 0.20
        },
        "axis": {
          "gridColor": {
            "condition": {"test": "datum.value === 0", "value": "black"},
            "value": "#ddd"
          }
        }
      },
      "color": {
        "field": "Continent",
        "scale": {
          "domain": [
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania",
            "Middle East"
          ],
          "range": [
            "#f20089",
            "#fb8500",
            "#ffb703",
            "#fba09d",
            "#219ebc",
            "#d08c60",
            "#023047"
          ]
        },
        "legend": {
          "title": "Region",
          "titleFontSize": 12,
          "labelFontSize": 12,
          "rowPadding": 6,
          "orient": "top-right"
        }
      }
    },
    "layer": [
      {
        "mark": "bar",
        "encoding": {
          "tooltip": [
            {"field": "Continent",
            "title": "Region"},
            {"field": "mean_generosity", 
            "title": "Level of Generosity",
            "format": ".4f"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": {"expr": "datum.mean_generosity < 0 ? 'right' : 'left'"},
          "dx": {"expr": "datum.mean_generosity < 0 ? -2 : 2"}
        },
        "encoding": {
          "text": {
            "field": "mean_generosity", 
            "type": "quantitative",
            "title": "Level of Generosity",
            "format": ".3f"
          },
          "tooltip": [
            {"field": "Continent", "type": "nominal",
            "title": "Region"},
            {"field": "mean_generosity", "type": "quantitative",
            "title": "Level of Generosity", "format": ".4f"}
          ]
        }
      }
    ]
  }