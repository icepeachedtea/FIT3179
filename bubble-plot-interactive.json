{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Happiness Report (2022)",
  "width": 400,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/icepeachedtea/FIT3179/4d5a2119c90c030b36c087aa4009208eb379d45d/2022_World_Happiness_Report.csv"
  },
  
  "encoding": {
    "x": {
      "field": "Social_Support",
      "type": "quantitative",
      "scale": 
      {
      "type": "linear",
      "domain": [0.2, 1]
    },
      "title": "Social Support",
      "axis": {"tickCount": 6}
}, "y": {
      "field": "Freedom_To_Make_Life_Choices",
      "type": "quantitative",
      "scale": 
      {
      "type": "linear",
      "domain": [0.3, 1]
    },
      "title": "Freedom To Make Life Choices",
      "axis": {"tickCount": 6}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Regional_Indicator"],
          "bind": "legend"
        } 
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Log_GDP_Per_Capita",
          "type": "quantitative",
          "title": "Log GDP Per Capita",
          "scale": {
            "type": "threshold",
            "domain": [4, 6, 8, 10],
            "range": [50, 150, 200, 300, 450]
          }
        },
        "color": {
          "field": "Regional_Indicator",
          "type": "nominal",
          "title": "Region",
          "scale": {
            "domain": [
              "North America and ANZ",
              "Latin America and Caribbean",
              "Central and Eastern Europe",
              "Middle East and North Africa",
              "South Asia",
              "Commonwealth of Independent States",
              "Western Europe",
              "Sub-Saharan Africa",
              "Southeast Asia",
              "East Asia"
            ],
            "range": [
              "#800026",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628",
              "#2ca25f",
              "#fc4e2a",
              "#004529",
              "#e7298a"
            ]
          }
        },
        "opacity": {
          "condition": {
            "selection": "continent_highlight",
            "value": 0.6
          },
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal", "title": "Country"},
          {"field": "Regional_Indicator", "type": "nominal", "title": "Region"},
          {"field": "Social_Support", "type": "quantitative", "title": "Social Support"},
          {"field": "Freedom_To_Make_Life_Choices", "type": "quantitative", "title": "Freedom To Make Life Choices"},
          {"field": "Log_GDP_Per_Capita", "type": "quantitative", "title": "Log GDP Per Capita"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country_Name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country_Name'] == 'Denmark' || datum['Country_Name'] == 'Uganda' || datum['Country_Name'] == 'Australia' || datum['Country_Name'] == 'Croatia' || datum['Country_Name'] == 'India' ||  datum['Country_Name'] == 'Malaysia' || datum['Country_Name'] == 'Madagascar'",
            "value": 1
          },
            "value": 0
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal", "title": "Country"},
          {"field": "Regional_Indicator", "type": "nominal", "title": "Region"},
          {"field": "Social_Support", "type": "quantitative", "title": "Social Support"},
          {"field": "Freedom_To_Make_Life_Choices", "type": "quantitative", "title": "Freedom To Make Life Choices"},
          {"field": "Log_GDP_Per_Capita", "type": "quantitative", "title": "Log GDP Per Capita"}
        ]
      }
    }
  ]
}
